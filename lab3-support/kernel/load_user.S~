	@author: Chaoya Li <chaoyal@andrew.cmu.edu>
	@This file is used to set the user mode, stack, branch
	@to user program.
	.file	"load_user.S"
	.text

	.global load_user

#include <bits/swi.h>
load_user:

	@save all the register in svc mode
	STMFD	sp!, {r0-r12, lr}
	MOV	r2, #0xa2000004
	STR	sp, [r2]

	@swich to user mode with IRQs & FIQs masked.
	MRS	r2, cpsr
	BIC	r2, #0xff
	ORR	r2, #0xd0
	MSR	cpsr, r2

	@set user mode stack	
	MOV	sp, #0xa3000000

	@push NULL
	MOV	r3, #0
	STMFD	sp!, {r3}
	
	@argc from uboot, act as a counter
	MOV	r3, r0, LSL #2
L1:
	CMP	r3, #0
	BEQ	L2
	@load argv to stack
	SUB	r3, r3, #4
	LDR	r4, [r1, r3]
	STMFD	sp!, {r4}
	B	L1
L2:
	STMFD	sp!, {r0}

	@jump to 0xa0000000
	MOV	r3, #0xa0000000
	BLX	r3

	@exit
	SWI	EXIT_SWI

